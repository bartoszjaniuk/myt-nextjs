generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String     @id @default(cuid())
  email            String     @unique
  name             String?

  ownedProjects    Project[]  @relation("UserOwnedProjects")

  assignedProjects AssignedProject[]

  workLogs         WorkLog[]

  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}

model Project {
  id              String     @id @default(cuid())
  name            String
  description     String?

  ownerId         String
  owner           User       @relation("UserOwnedProjects", fields: [ownerId], references: [id])


  color           String @default("#3DD08E")
  assignedUsers   AssignedProject[]
  workLogs         WorkLog[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model AssignedProject {
  userId      String
  projectId   String

  user        User    @relation(fields: [userId], references: [id])
  project     Project @relation(fields: [projectId], references: [id])
  role        Role     @default(EMPLOYEE)
  assignedAt  DateTime @default(now())

  hourlyRate  Int

  @@id([userId, projectId])
}


model WorkLog {
  id          String    @id @default(cuid())

  userId      String
  user        User      @relation(fields: [userId], references: [id])

  projectId   String
  project     Project   @relation(fields: [projectId], references: [id])

  description String?
  duration    Int       
  date        DateTime

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  method        LogMethod       @default(MANUAL)

}

enum Role {
  EMPLOYEE
  EMPLOYER
  ADMIN
}

enum LogMethod {
  MANUAL
  TIMER
}